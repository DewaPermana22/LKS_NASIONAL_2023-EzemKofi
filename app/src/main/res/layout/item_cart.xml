<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="12dp"
        app:contentPadding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_chart"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/espresso_elegance"/>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name_coffee_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Of Coffee"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/ezem_black"/>
                <TextView
                    android:id="@+id/category_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/ezem_gray"/>
                <LinearLayout
                    android:paddingTop="8dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size : "
                        android:textStyle="normal"
                        android:textSize="19sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/ezem_black"/>
                    <TextView
                        android:id="@+id/size_chart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        android:textStyle="normal"
                        android:textSize="19sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/ezem_black"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_pesan">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btn_minus_cart"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@android:color/transparent"
                                android:drawableStart="@drawable/minus"
                                android:stateListAnimator="@null"
                                android:textColor="@color/ezem_green"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/tv_quantity_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="1"
                                android:textColor="#000000"
                                android:textSize="19sp" />
                            <Button
                                android:id="@+id/btn_plus_cart"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@android:color/transparent"
                                android:drawableEnd="@drawable/plus"
                                android:stateListAnimator="@null" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="120dp"
                        android:gravity="end"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="24sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/ezem_black"/>
                        <TextView
                            android:id="@+id/price_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.89"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/ezem_black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>