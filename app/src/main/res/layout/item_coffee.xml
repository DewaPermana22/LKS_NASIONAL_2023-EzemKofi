<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_coffee"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:translationX="25dp"
        android:translationY="75dp"
        android:src="@drawable/espresso_elegance"
        android:elevation="30dp"/>
<androidx.cardview.widget.CardView
    android:layout_width="230dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/ezem_green"
    android:layout_height="220dp">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center_vertical"
        android:paddingStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingTop="28dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/ezem_white"
            android:id="@+id/coffee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Coffee"/>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_rating">
            <ImageView
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"/>
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/rate_coffee"
                android:textColor="@color/ezem_white"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:textStyle="normal"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/ezem_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"/>
            <TextView
                android:textSize="25sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/ezem_white"
                android:id="@+id/price_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.45"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>