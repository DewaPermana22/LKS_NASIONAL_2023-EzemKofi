<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        android:layout_width="350dp"
        android:background="@color/ezem_green"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="6dp"
                    android:id="@+id/image_top_pick"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/espresso_elegance"/>
                <LinearLayout
                    android:layout_marginStart="31dp"
                    android:translationY="-38dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_rate_top_pick"
                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"/>
                    <TextView
                        android:id="@+id/rate_top_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.1"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/ezem_white"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:orientation="vertical"
                android:translationY="-20dp">

                <TextView
                    android:id="@+id/name_top_coffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Name for Coffee"
                    android:textColor="@color/ezem_black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_top_pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Category"
                    android:textColor="@color/ezem_gray"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="$"
                        android:textColor="@color/ezem_black"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_top_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="4.89"
                        android:textColor="@color/ezem_black"
                        android:textSize="21sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>